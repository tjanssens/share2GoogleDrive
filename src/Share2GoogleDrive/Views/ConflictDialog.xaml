<Window x:Class="Share2GoogleDrive.Views.ConflictDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Already Exists"
        Width="400" Height="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="A file with this name already exists in the destination folder:"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="FileNameText"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="What would you like to do?"
                   VerticalAlignment="Center"
                   Margin="0,15"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Replace"
                    Padding="15,8"
                    Margin="5"
                    Click="Replace_Click"
                    ToolTip="Overwrite the existing file"/>
            <Button Content="Keep Both"
                    Padding="15,8"
                    Margin="5"
                    Click="KeepBoth_Click"
                    ToolTip="Upload with a new name"/>
            <Button Content="Cancel"
                    Padding="15,8"
                    Margin="5"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
