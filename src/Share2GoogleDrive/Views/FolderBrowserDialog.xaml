<Window x:Class="Share2GoogleDrive.Views.FolderBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Google Drive Folder"
        Width="400" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="300" MinHeight="300">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Select a folder to upload files to:"
                   Margin="0,0,0,10"/>

        <TreeView Grid.Row="1"
                  x:Name="FolderTree"
                  SelectedItemChanged="FolderTree_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“ " FontSize="14"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Create New Folder -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="NewFolderNameTextBox"
                     Padding="5"
                     VerticalContentAlignment="Center"/>
            <Button Grid.Column="1"
                    Content="Create Folder"
                    Padding="10,5"
                    Margin="5,0,0,0"
                    Click="CreateFolder_Click"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Select"
                    Padding="20,8"
                    Margin="5"
                    Click="Select_Click"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Padding="20,8"
                    Margin="5"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="4"
              x:Name="LoadingOverlay"
              Background="#80FFFFFF"
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="150" Height="15"/>
                <TextBlock Text="Loading folders..."
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
