<Window x:Class="Share2GoogleDrive.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ„ Mario's Cloud Castle - Settings"
        Width="520" Height="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource SkyBlueBrush}"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with clouds -->
        <Border Grid.Row="0" Background="{StaticResource SkyBlueBrush}" Padding="15,10">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="â˜ï¸  MARIO'S CLOUD CASTLE  â˜ï¸"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="File Delivery Service"
                           FontSize="12"
                           Foreground="#FFFFFFCC"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel Margin="5">

                <!-- Account Section -->
                <GroupBox Header="ðŸŽ® Player Account" Style="{StaticResource MarioGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Status: " FontWeight="Bold" Foreground="#333"/>
                                <TextBlock x:Name="AccountStatus"
                                           Text="{Binding IsConnected, Converter={StaticResource BoolToStatusConverter}}"
                                           Foreground="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                           FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding AccountEmail}"
                                       Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Foreground="#666"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="ðŸŒŸ Enter Game"
                                    Style="{StaticResource PipeButton}"
                                    Command="{Binding SignInCommand}"
                                    Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <Button Content="ðŸšª Exit Game"
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding SignOutCommand}"
                                    Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Upload Settings Section -->
                <GroupBox Header="ðŸ“¦ Delivery Settings" Style="{StaticResource MarioGroupBox}">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ðŸ° Target Castle:" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#333"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding TargetFolderName, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Style="{StaticResource MarioTextBox}"/>
                            <Button Grid.Column="2"
                                    Content="ðŸ” Find"
                                    Style="{StaticResource MarioButton}"
                                    Click="BrowseFolder_Click"
                                    IsEnabled="{Binding IsConnected}"/>
                        </Grid>

                        <CheckBox Content="Open file in browser after delivery"
                                  Style="{StaticResource MarioCheckBox}"
                                  IsChecked="{Binding OpenInBrowserAfterUpload}"/>
                        <CheckBox Content="Show power-up notifications"
                                  Style="{StaticResource MarioCheckBox}"
                                  IsChecked="{Binding ShowNotifications}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Keyboard Shortcut Section -->
                <GroupBox Header="ðŸŽ¹ Power-Up Shortcut" Style="{StaticResource MarioGroupBox}">
                    <StackPanel>
                        <CheckBox Content="Enable magic hotkey"
                                  Style="{StaticResource MarioCheckBox}"
                                  IsChecked="{Binding HotkeyEnabled}"/>

                        <Grid Margin="0,10,0,0" IsEnabled="{Binding HotkeyEnabled}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="â­ Shortcut:" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#333"/>
                            <TextBox Grid.Column="1"
                                     x:Name="HotkeyTextBox"
                                     IsReadOnly="True"
                                     Style="{StaticResource MarioTextBox}"
                                     PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                                     GotFocus="HotkeyTextBox_GotFocus"
                                     LostFocus="HotkeyTextBox_LostFocus"/>
                            <Button Grid.Column="2"
                                    Content="ðŸ”„ Reset"
                                    Style="{StaticResource MarioButton}"
                                    Command="{Binding ResetHotkeyCommand}"/>
                        </Grid>

                        <TextBlock Text="ðŸ’¡ Click the box and press your combo!"
                                   FontStyle="Italic"
                                   Foreground="#666"
                                   Margin="5,8,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Context Menu Section -->
                <GroupBox Header="ðŸ“‹ Right-Click Power" Style="{StaticResource MarioGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Add 'Send 2 Drive' to right-click menu" Foreground="#333"/>
                            <TextBlock x:Name="ContextMenuStatus"
                                       Text="{Binding ContextMenuRegistered, Converter={StaticResource BoolToRegisteredConverter}}"
                                       Foreground="{Binding ContextMenuRegistered, Converter={StaticResource BoolToColorConverter}}"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="ðŸŸ¢ Install Pipe"
                                    Style="{StaticResource PipeButton}"
                                    Command="{Binding RegisterContextMenuCommand}"
                                    Visibility="{Binding ContextMenuRegistered, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <Button Content="âŒ Remove"
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding UnregisterContextMenuCommand}"
                                    Visibility="{Binding ContextMenuRegistered, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- General Settings Section -->
                <GroupBox Header="âš™ï¸ World Settings" Style="{StaticResource MarioGroupBox}">
                    <StackPanel>
                        <CheckBox Content="Start Mario with Windows"
                                  Style="{StaticResource MarioCheckBox}"
                                  IsChecked="{Binding Autostart}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer with ground blocks pattern -->
        <Border Grid.Row="2" Background="{StaticResource BlockBrownBrush}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource MarioYellowBrush}"
                           FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ’¾ Save Game"
                            Style="{StaticResource PipeButton}"
                            Command="{Binding SaveSettingsCommand}"
                            IsDefault="True"/>
                    <Button Content="ðŸšª Close"
                            Style="{StaticResource MarioButton}"
                            Click="Close_Click"
                            IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3"
              Background="#CC000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource MarioYellowBrush}"
                    BorderBrush="{StaticResource BlockBrownBrush}"
                    BorderThickness="4"
                    CornerRadius="10"
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="â³ Loading..."
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                 Width="200"
                                 Height="20"
                                 Margin="0,15,0,10"
                                 Foreground="{StaticResource MarioGreenBrush}"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               HorizontalAlignment="Center"
                               Foreground="#333"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
